---
import { getCollection } from "astro:content";
import "../styles/global.css";
import { getEntry, getEntries } from 'astro:content';

const relatedPosts = await getCollection('characters')
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/Stinky-Dragon-Wiki/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>StinkyDragonPodcast Wiki</title>
  </head>
  <body class="stinky-background">
    <!-- <Image src={background} alt=""></Image>-->
    <h1>StinkyDragonPodcast Wiki</h1>
    <h2>Welcome to the Tales from the Stinky Dragon wiki!</h2>
    <p>
      Step on in to The Stinky Dragon! Grab yourself a drink, have a seat, and
      strap in for this week's thrilling tale!
    </p>
    <p>***Currently under construction, pardon our dust***</p>
    <h2>You might also like:</h2>
{relatedPosts.map(post => (
  <a href={`/Stinky-Dragon-Wiki/characters/${post.id}`}>{post.data.name}</a>
))}
  </body>
</html>
